<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.project.foret.db.mapper.MemberMapper">
    <select 
        id="emailCheck" 
        parameterType="com.project.foret.db.dto.MemberDTO" 
        resultType="com.project.foret.db.dto.MemberDTO"
    >
        SELECT * FROM member WHERE email = #{email}
    </select>

    <select 
        id="login" 
        parameterType="com.project.foret.db.dto.MemberDTO" 
        resultType="com.project.foret.db.dto.MemberDTO"
    >
        SELECT * FROM member WHERE email = #{email} AND password = #{password}
    </select>

    <insert 
        id="insert" 
        parameterType="com.project.foret.db.dto.MemberDTO" 
    >
        INSERT INTO member (NAME, email, PASSWORD, nickname, birth, reg_date)
        VALUES(#{name}, #{email}, #{password}, #{nickname}, #{birth}, NOW())
    </insert>
</mapper>
