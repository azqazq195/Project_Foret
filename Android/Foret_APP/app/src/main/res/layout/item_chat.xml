    <TextView android:id="@+id/chatRead" android:layout_width="20sp" android:layout_height="20sp" android:layout_marginTop="11dp" android:layout_marginEnd="16dp" android:layout_marginBottom="11dp" android:background="@drawable/round" android:text="1" android:textAlignment="center" app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/chatDate" />

