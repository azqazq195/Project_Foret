<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Foret_APP_prototype" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimaryVariant">@color/foret4</item>
        <item name="colorOnPrimary">@color/foret4</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/foret4</item>
        <item name="colorSecondaryVariant">@color/foret4</item>
        <item name="colorOnSecondary">@color/foret4</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/foret4</item>
        <!-- Customize your theme here. -->
        <item name="android:actionMenuTextColor">@drawable/write</item>
    </style>

    <style name="NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ToolbarWhite" parent="Theme.AppCompat.NoActionBar">
        <item name="android:titleTextColor">@android:color/white</item>
        <item name="android:colorControlNormal">@android:color/white</item>
        <item name="toolbarStyle">@style/Widget.AppCompat.Toolbar</item> <!--Toolbar 스타일-->
        <item name="actionMenuTextColor">@color/foret4</item> <!--액션 메뉴의 텍스트 색상-->
        <item name="colorControlNormal">@color/white</item> <!--홈/뒤로가기 버튼의 색상-->
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>