<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mybatis.foretMapper">
	<!-- 포레 -->
	<!-- 포레 추가-->
	<insert id="foretWrite" parameterType="foretDTO" useGeneratedKeys="true" keyColumn="id" keyProperty="id">
		INSERT INTO foret 
		VALUES      (seq_foret_id.nextval, 
		             #{leader_id}, 
		             #{name}, 
		             #{introduce}, 
		             #{max_member}, 
		             sysdate)
	</insert>
	<!-- 포레 수정-->
	<update id="foretModify" parameterType="memberDTO" >
		UPDATE foret 
		SET    leader_id = 6, 
		       NAME = '포레수정', 
		       introduce = '소개수정', 
		       max_member = 2 
		WHERE  id = 3; 
	</update>
	<!-- 포레 삭제-->
	<delete id="foretDelete" parameterType="foretDTO" >
		DELETE FROM foret 
		WHERE  id = #{id}
	</delete>
</mapper>