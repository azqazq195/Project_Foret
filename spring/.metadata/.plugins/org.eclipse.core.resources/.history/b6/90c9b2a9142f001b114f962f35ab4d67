<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mybatis.foretBoardMapper">

	<insert id="foretBoardWrite" parameterType="foretBoardDTO">
		insert into group_board_table values(#{group_no},
		board_no_group_board_table.nextval, #{board_type}, #{board_writer},
		#{board_subject}, #{board_content}, #{board_photo_name}, #{board_hit},
		#{board_like_count}, #{board_comment_count}, sysdate, sysdate)
	</insert>

	<delete id="foretBoardDelete" parameterType="java.util.Map">
		delete group_board_table where board_no=#{board_no} and board_writer=#{board_writer}
	</delete>

	<update id="foretBoardModify" parameterType="foretBoardDTO">
		update group_board_table set board_type=#{board_type},
		board_subject=#{board_subject},	board_content=#{board_content},
		board_photo_name=#{board_photo_name}, board_edited_date=sysdate
		where board_no=#{board_no} and board_writer=#{board_writer}
	</update>

	<select id="foretBoardList" parameterType="int" resultType="foretBoardDTO">
		select * from group_board_table where group_no=#{group_no} order by board_no desc
	</select>

	<select id="foretBoardSelect" parameterType="int" resultType="foretBoardDTO">
		select * from group_board_table where board_no=#{board_no}
	</select>
	
</mapper>