<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mybatis.tagMapper">
	<!-- 태그 추가 -->
	<insert id="tagWrite" parameterType="tagDTO">
		INSERT INTO tag 
		VALUES		(seq_tag_id.nextval,
		            #{tag_name})
	</insert>
	<!-- 태그 삭제 -->
	<delete id="tagDelete" parameterType="tagDTO">
		DELETE FROM tag
		<if test="tag_id != 0">
			WHERE tag_id = #{tag_id}
		</if>
		<if test="tag_id == 0">
			WHERE tag_name = #{tag_name}
		</if>	
	</delete>
	<!-- 태그 전체 목록 -->
	<select id="tagList" resultType="tagDTO">
		SELECT * 
		FROM   tag 
		ORDER  BY tag_id DESC 
	</select>
	
	<!-- 태그 id 가져오기 -->
	<select id="tagList" resultType="list" parameterType="hashmap">
		SELECT tag_id 
		FROM   tag 
		WHERE  
		<foreach collection="tag" item="tag" index="index"  open="(" close=")" separator=",">
            #{type[index]}
        </foreach>
	</select>
tagSelect
</mapper>