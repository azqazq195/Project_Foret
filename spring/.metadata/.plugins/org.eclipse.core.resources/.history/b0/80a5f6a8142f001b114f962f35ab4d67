<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mybatis.foretMapper">

	<insert id="foretWrite" parameterType="foretDTO">
		insert into group_table values(group_no_group_table.nextval, #{group_name}, 
		#{group_currunt_member_count}, #{group_leader}, #{group_profile}, #{group_photo}, 
		#{group_tag}, #{group_region}, #{group_max_member}, sysdate)
	</insert>

	<delete id="foretDelete" parameterType="java.util.Map">
		delete group_table where group_no=#{group_no} and group_leader=#{group_leader}
	</delete>

	<update id="foretModify" parameterType="foretDTO">
		update group_table set group_name=#{group_name}, group_profile=#{group_profile},
	    group_photo=#{group_photo}, group_tag=#{group_tag}, group_region=#{group_region},
	    group_max_member=#{group_max_member}
		where group_no=#{group_no} and group_leader=#{group_leader}
	</update>
	
	<update id="foretChangeLeader" parameterType="java.util.Map">
		update group_table set group_leader=#{new_leader} 
		where group_no=#{group_no} and group_leader=#{group_leader}
	</update>	

	<select id="foretList" resultType="foretDTO">
		select * from group_table order by group_no asc
	</select>

	<select id="foretSelect" parameterType="int" resultType="foretDTO">
		select * from group_table where group_no=#{group_no}
	</select>
	
</mapper>