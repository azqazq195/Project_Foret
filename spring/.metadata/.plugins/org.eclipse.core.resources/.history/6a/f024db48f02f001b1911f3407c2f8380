package region.dao;

import java.util.List;

import org.mybatis.spring.SqlSessionTemplate;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Repository;

import tag.bean.TagDTO;

@Repository
public class RegionDAO {
	@Autowired
	SqlSessionTemplate sqlSession;
	
	public int regionWrite(regionDTO tagDTO) {
		return sqlSession.insert("mybatis.regionMapper.regionWrite", tagDTO);
	}
	
	public int regionDelete(TagDTO tagDTO) {
		return sqlSession.insert("mybatis.regionMapper.regionDelete", tagDTO);
	}
	
	public List<regionDTO> regionList() {
		return sqlSession.selectList("mybatis.regionMapper.regionList");
	}
}
