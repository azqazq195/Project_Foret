package photo.dao;

import org.mybatis.spring.SqlSessionTemplate;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Repository;

import photo.bean.PhotoDTO;

@Repository
public class PhotoDAO {
	@Autowired
	SqlSessionTemplate sqlSession;
	
	public int getMemberFirstSeq() {
		return sqlSession.selectOne("mybatis.photoMapper.getMemberFirstSeq");
	}
	
	public int filesWrite(PhotoDTO PhotoDTO) {
		return sqlSession.insert("mybatis.photoMapper.filesWrite", PhotoDTO);
	}
	
	public String checkFiles(int reference_id) {
		return sqlSession.selectOne("mybatis.photoMapper.checkFiles", reference_id);
	}
}
