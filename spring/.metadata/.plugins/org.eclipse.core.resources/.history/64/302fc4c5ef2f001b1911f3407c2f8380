<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mybatis.regionMapper">
	<!-- 태그 추가 -->
	<insert id="regionWrite" parameterType="regionDTO">
		INSERT INTO region 
		     VALUES(seq_region_id.nextval,
		            #{si},
		            #{gu})
	</insert>
	
	<!-- 태그 삭제 -->
	<delete id="regionDelete" parameterType="regionDTO">
		DELETE FROM region
		<if test="tag_id != 0">
			WHERE region_id = #{region_id}
		</if>
		<if test="tag_id == 0">
			WHERE tag_name = #{tag_name}
		</if>	
	</delete>
	
	<!-- 태그 전체 목록 -->
	<select id="tagList" resultType="regionDTO">
		select * from tag order by tag_id desc
	</select>

</mapper>