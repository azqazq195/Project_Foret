<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mybatis.regionMapper">
	<!-- 지역 추가 -->
	<insert id="regionWrite" parameterType="regionDTO">
		INSERT INTO region 
		     VALUES(seq_region_id.nextval,
		            #{region_si},
		            #{region_gu})
	</insert>
	<!-- 지역 삭제 -->
	<delete id="regionDelete" parameterType="regionDTO">
		DELETE FROM region
		<if test="region_id != 0">
			WHERE region_id = #{region_id}
		</if>
		<if test="region_id == 0">
			WHERE si = #{region_si}
		      AND gu = #{region_gu}
		</if>	
	</delete>
	<!-- 지역 전체 목록 -->
	<select id="regionList" resultType="regionDTO">
		select * from region order by region_id desc
	</select>

	<!-- 지역 id 가져오기 -->
	<select id="regionSelect" resultType="regionDTO">
			SELECT * 
			FROM   region 
			WHERE
			<foreach collection="list" item="region" separator="or">
				si = #{region.region_si} AND gu = #{region.region_gu}
	        </foreach>
	</select>

</mapper>