<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mybatis.photoMapper">
	<!-- 사진 등록 -->
	<insert id="memberPhotoWrite" parameterType="photoDTO">
		INSERT INTO member_photo 
		VALUES      (seq_member_photo_id.nextval, 
		             #{reference_id}, 
		             #{dir}, 
		             #{filename}, 
		             #{originname}, 
		             #{filesize}, 
		             #{filetype}, 
		             sysdate)
	</insert>
	<insert id="foretPhotoWrite" parameterType="photoDTO">
		INSERT INTO foret_photo 
		VALUES      (seq_foret_photo_id.nextval, 
		             #{reference_id}, 
		             #{dir}, 
		             #{filename}, 
		             #{originname}, 
		             #{filesize}, 
		             #{filetype}, 
		             sysdate)
	</insert>
	<insert id="boardPhotoWrite" parameterType="photoDTO">
		INSERT INTO board_photo 
		VALUES      (seq_board_photo_id.nextval, 
		             #{reference_id}, 
		             #{dir}, 
		             #{filename}, 
		             #{originname}, 
		             #{filesize}, 
		             #{filetype}, 
		             sysdate)
	</insert>
	<!-- 사진 수정 -->
	<update id="memberPhotoModify" parameterType="photoDTO">
		UPDATE member_photo 
		SET    dir = #{dir}, 
		       filename = #{filename}, 
		       originname = #{originname}, 
		       filesize = #{filesize}, 
		       filetype = #{filetype} 
		WHERE  member_id = #{reference_id}
	</update>
	<update id="foretPhotoModify" parameterType="photoDTO">
		UPDATE foret_photo 
		SET    dir = #{dir}, 
		       filename = #{filename}, 
		       originname = #{originname}, 
		       filesize = #{filesize}, 
		       filetype = #{filetype} 
		WHERE  foret_id = #{reference_id}
	</update>
	<update id="boardPhotoModify" parameterType="photoDTO">
		UPDATE board_photo 
		SET    dir = #{dir}, 
		       filename = #{filename}, 
		       originname = #{originname}, 
		       filesize = #{filesize}, 
		       filetype = #{filetype} 
		WHERE  board_id = #{reference_id}
	</update>
	<!-- 사진 삭제 -->
	<delete id="memberPhotoDelete">
		DELETE FROM member_photo 
		WHERE  member_id = #{reference_id} 
	</delete>
	<delete id="foretPhotoDelete">
		DELETE FROM foret_photo 
		WHERE  foret_id = #{reference_id} 
	</delete>
	<delete id="boardPhotoDelete">
		DELETE FROM board_photo 
		WHERE  board_photo = #{reference_id} 
	</delete>

	<!-- 사진 확인 -->
	<select id="memberPhotoCheck">	
		SELECT id 
		FROM   member_photo 
		WHERE  member_id = #{reference_id}
	</select>
	<select id="foretPhotoCheck">
		SELECT id 
		FROM   foret_photo 
		WHERE  member_id = #{reference_id}
	</select>

</mapper>