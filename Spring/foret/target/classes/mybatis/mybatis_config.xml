<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
	PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<!-- 클래스에 별명 설정 -->
	<typeAliases>
		<!-- 회원 정보 -->
		<typeAlias type="member.bean.Member" alias="Member"/>
		<!-- 익명 게시판 -->
		<typeAlias type="freeboard.bean.FreeBoard" alias="FreeBoard"/>
		<typeAlias type="freeboard.bean.FreeBoardComment" alias="FreeBoardComment"/>
	</typeAliases>
	
	<!-- sql mapper 설정 -->
	<mappers>
		<mapper resource="mybatis/freeboard_mapping.xml"/>
		<mapper resource="mybatis/member_mapping.xml"/>
	</mappers>
</configuration>